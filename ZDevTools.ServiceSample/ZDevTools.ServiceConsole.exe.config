<?xml version="1.0" encoding="utf-8"?>
<!-- 该配置文件由服务壳程序使用，应由各服务类库的app.config文件和原始壳配置文件合并而来 -->
<configuration>
  <configSections>
    <section name="log4net"
             type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
    <sectionGroup name="applicationSettings"
                  type="System.Configuration.ApplicationSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="ZDevTools.ServiceConsole.Properties.Settings"
               type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
               requirePermission="false" />
      <section name="ZDevTools.ServiceCore.Properties.Settings"
               type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089"
               requirePermission="false" />
    </sectionGroup>
  </configSections>
  <startup>
    <supportedRuntime version="v4.0"
                      sku=".NETFramework,Version=v4.5" />
  </startup>
  <log4net>
    <appender name="FormAppender"
              type="ZDevTools.ServiceConsole.FormAppender">
      <layout type="log4net.Layout.PatternLayout">
        <header value="" />
        <footer value="" />
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss} %-5level - %message%0.0exception" />
      </layout>
    </appender>
    <appender name="LogFileAppender"
              type="log4net.Appender.RollingFileAppender">
      <!--最小锁定模型以允许多个进程可以写入同一个文件-->
      <!--<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />-->
      <file value="logs\\log" />
      <!-- Example using environment variables in params -->
      <!-- <file value="${TMP}\log-file.txt" /> -->
      <appendToFile value="true" />
      <param name="MaxSizeRollBackups"
             value="100" />
      <param name="MaxFileSize"
             value="10240" />
      <param name="StaticLogFileName"
             value="false" />
      <param name="RollingStyle"
             value="Date" />
      <param name="DatePattern"
             value="_yyyy-MM-dd&quot;.log&quot;" />
      <!-- An alternate output encoding can be specified -->
      <!-- <encoding value="unicodeFFFE" /> -->
      <layout type="log4net.Layout.PatternLayout">
        <header value="&gt;&gt;&gt;&gt;&gt;&gt;&gt;&gt;&gt;&gt;&#xD;&#xA;" />
        <footer value="&lt;&lt;&#xD;&#xA;" />
        <conversionPattern value="%date [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="WARN" />
        <levelMax value="FATAL" />
      </filter>
      <!-- Alternate layout using XML
      <layout type="log4net.Layout.XMLLayout" /> -->
    </appender>
    <root>
      <appender-ref ref="FormAppender" />
      <appender-ref ref="LogFileAppender" />
    </root>
  </log4net>
  <applicationSettings>
    <ZDevTools.ServiceConsole.Properties.Settings>
      <setting name="ServiceConsoleTitle"
               serializeAs="String">
        <value>样例服务控制台</value>
      </setting>
      <setting name="ServiceWaitTimeOut"
               serializeAs="String">
        <value>600</value>
      </setting>
      <setting name="AutoUpdateUri"
               serializeAs="String">
        <value/>
      </setting>
      <setting name="AutoUpdateInterval"
               serializeAs="String">
        <value>1800</value>
      </setting>
    </ZDevTools.ServiceConsole.Properties.Settings>
    <ZDevTools.ServiceCore.Properties.Settings>
      <setting name="RedisServer"
               serializeAs="String">
        <value></value>
      </setting>
    </ZDevTools.ServiceCore.Properties.Settings>
  </applicationSettings>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior name="">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false" />
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <services>
      <service name="ZDevTools.ServiceSample.Services.SampleWCFService">
        <endpoint address="http://localhost:8080/SampleWCFService"
                  binding="basicHttpBinding"
                  contract="ZDevTools.ServiceSample.Services.ISampleWCFService">
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:8080/SampleWCFService"/>
          </baseAddresses>
        </host>
      </service>
    </services>
  </system.serviceModel>
</configuration>
